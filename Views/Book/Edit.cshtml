@model Book
@{
    ViewData["Title"] = "Edit Book";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input asp-for="Author" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PublishedYear">Published Year</label>
        <input asp-for="PublishedYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserId">User</label>
        <select asp-for="UserId" class ="form-control">
            <option value="">None</option>
            @foreach (var item in ViewBag.UserId as SelectList)
            {
                <option value="@item.Value" selected="@(item.Value == Model.UserId?.ToString())">@item.Text</option>
            }
        </select>
    </div>

    <input type="submit" value="Update" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
